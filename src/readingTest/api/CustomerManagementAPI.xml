<?xml version="1.0" encoding="UTF-8"?>
<api context="/customerManagement" name="CustomerManagementAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/v1/customerAccountList">
        <inSequence>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://localhost:8290/services/tmf-domain-Customer/customerAccountList">
                        <timeout>
                            <duration>40000</duration>
                            <responseAction>fault</responseAction>
                        </timeout>
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/v1/customerAccountGet">
        <inSequence>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://localhost:8290/services/tmf-domain-Customer/customerAccountGet">
                        <timeout>
                            <duration>40000</duration>
                            <responseAction>fault</responseAction>
                        </timeout>
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
