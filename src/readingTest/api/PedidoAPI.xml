<?xml version="1.0" encoding="UTF-8"?>
<api context="/pedido" name="PedidoAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/v1/pedido">
        <inSequence>
            <log level="custom">
                <property name="--> " value="Requisitando recebida! - /pedido/v1"/>
            </log>
            <property expression="$trp:Content-Type" name="formato" scope="default" type="STRING"/>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
            <property name="Content-Type" scope="axis2" type="STRING" value="application/xml;charset=UTF-8"/>
            <payloadFactory media-type="xml">
                <format>
                    <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                        <soapenv:Header/>
                        <soapenv:Body>
							$1
						</soapenv:Body>
                    </soapenv:Envelope>
                </format>
                <args>
                    <arg evaluator="xml" expression="$body//Pedido"/>
                </args>
            </payloadFactory>
            <log level="full"/>
            <sequence key="SetHeaders"/>
            <log level="custom">
                <property expression="get-property('uri.var.host.ERP')" name="--> "/>
                <property expression="get-property('uri.var.host.APIPROGRESS')" name="--> "/>
            </log>
            <property name="Content-Type" scope="axis2" type="STRING" value="text/xml;charset=UTF-8"/>
            <header expression="fn:concat(get-property('uri.var.host.APIPROGRESS'),'/services/PedidoTotvsProxy.PedidoTotvsProxyHttpSoap11Endpoint')" name="To" scope="default"/>
            <log level="full"/>
            <call blocking="true">
                <endpoint>
                    <default format="soap11">
                        <timeout>
                            <duration>120000</duration>
                        </timeout>
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </default>
                </endpoint>
            </call>
            <log level="full"/>
            <switch source="$ctx:formato">
                <case regex="application/json">
                    <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
                    <property name="Content-Type" scope="axis2" type="STRING" value="application/json;charset=UTF-8"/>
                    <log level="full">
                        <property name="--> " value="json"/>
                    </log>
                </case>
                <case regex="application/xml">
                    <log level="full">
                        <property name="--> " value="xml"/>
                    </log>
                </case>
                <default>
                    <log/>
                </default>
            </switch>
            <log level="custom">
                <property name="--> " value="Requisitando finalizada!"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="PUT" uri-template="/v1/notafiscal-agenciamento">
        <inSequence>
            <log level="custom">
                <property name="--> " value="Requisitando recebida! - /pedido/v1/notafiscal-agenciamento"/>
                <property expression="$body" name="Antes valida"/>
            </log>
            <propertyGroup>
                <property expression="//numeroPedido/text()" name="numeroPedido" scope="default" type="STRING"/>
                <property expression="//pedidoCliente/text()" name="pedidoCliente" scope="default" type="STRING"/>
                <property expression="//estabelecimento/text()" name="estabelecimento" scope="default" type="STRING"/>
                <property expression="//serie/text()" name="serie" scope="default" type="STRING"/>
                <property expression="//numeroNota/text()" name="numeroNota" scope="default" type="STRING"/>
                <property expression="//dataEmissao/text()" name="dataEmissao" scope="default" type="STRING"/>
                <property expression="//valorNota/text()" name="valorNota" scope="default" type="STRING"/>
                <property expression="//chaveAcesso/text()" name="chaveAcesso" scope="default" type="STRING"/>
            </propertyGroup>
            <sequence key="SetHeaders"/>
            <sequence key="AgenciamentoRetornoNfSequence"/>
            <propertyGroup>
                <property name="status" scope="default" type="STRING" value="OK"/>
                <property expression="//message/text()" name="message" scope="default" type="STRING"/>
            </propertyGroup>
            <sequence key="StandartResponseSequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <log level="full" separator="&#xa;">
                <property expression="get-property('ERROR_CODE')" name="ERROR_CODE"/>
                <property expression="get-property('ERROR_MESSAGE')" name="ERROR_MESSAGE"/>
                <property expression="get-property('ERROR_DETAIL')" name="ERROR_DETAIL"/>
                <property expression="get-property('ERROR_EXCEPTION')" name="ERROR_EXCEPTION"/>
            </log>
            <send/>
        </faultSequence>
    </resource>
</api>
