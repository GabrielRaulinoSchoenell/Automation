    <resource methods="GET" uri-template="/produtos/codigo/{codigo}/status/{status}">
        <inSequence>
            <log level="custom">
                <property name="--> " value="Requisitando recebida! - /produtos/codigo/{codigo}/status/{status}"/>
            </log>
            <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
            <property action="remove" name="REST_URL_POSTFIX" scope="axis2"/>
            <property name="Accept" scope="transport" type="STRING" value="application/json"/>
            <sequence key="SetHeaders"/>
            <filter regex="Todos" source="$ctx:uri.var.status">
                <then>
                    <call>
                        <endpoint>
                            <http method="get" uri-template="{uri.var.host.APIPROGRESS}/services/ProgressDSS/getProduto?where=where%20t1.%22cod-obsoleto%22%20%3E%3D1%20AND%20t1.%22it-codigo%22%3D{uri.var.codigo}%20WITH%20(NOLOCK)">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>1</progressionFactor>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </then>
                <else/>
            </filter>
            <filter regex="Ativos" source="$ctx:uri.var.status">
                <then>
                    <call>
                        <endpoint>
                            <http method="get" uri-template="{uri.var.host.APIPROGRESS}/services/ProgressDSS/getProduto?where=where%20t1.%22cod-obsoleto%22%3D1%20AND%20t1.%22it-codigo%22={uri.var.codigo}%20WITH%20(NOLOCK)">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>1</progressionFactor>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </then>
                <else/>
            </filter>
            <filter regex="Obsoleto Ordens Automaticas" source="$ctx:uri.var.status">
                <then>
                    <call>
                        <endpoint>
                            <http method="get" uri-template="{uri.var.host.APIPROGRESS}/services/ProgressDSS/getProduto?where=where%20t1.%22cod-obsoleto%22%3D2%20AND%20t1.%22it-codigo%22={uri.var.codigo}%20WITH%20(NOLOCK)">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>1</progressionFactor>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </then>
                <else/>
            </filter>
            <filter regex="Obsoleto Todas as Ordens" source="$ctx:uri.var.status">
                <then>
                    <call>
                        <endpoint>
                            <http method="get" uri-template="{uri.var.host.APIPROGRESS}/services/ProgressDSS/getProduto?where=where%20t1.%22cod-obsoleto%22%3D3%20AND%20t1.%22it-codigo%22={uri.var.codigo}%20WITH%20(NOLOCK)">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>1</progressionFactor>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </then>
                <else/>
            </filter>
            <filter regex="Totalmente Obsoleto" source="$ctx:uri.var.status">
                <then>
                    <log level="custom">
                        <property name="--> " value="Totalmente Obsoleto ----"/>
                    </log>
                    <call>
                        <endpoint>
                            <http method="get" uri-template="{uri.var.host.APIPROGRESS}/services/ProgressDSS/getProduto?where=where%20t1.%22cod-obsoleto%22%3D4%20AND%20t1.%22it-codigo%22={uri.var.codigo}%20WITH%20(NOLOCK)">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>1</progressionFactor>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </then>
                <else/>
            </filter>
            <filter xpath="//Produtos/Produto">
                <then>
                    <payloadFactory media-type="json">
                        <format>
							{
							"Produto": $1
							}
						</format>
                        <args>
                            <arg evaluator="json" expression="$.Produtos.Produto[0]"/>
                        </args>
                    </payloadFactory>
                </then>
                <else>
                    <property name="HTTP_SC" scope="axis2" type="STRING" value="404"/>
                    <payloadFactory media-type="json">
                        <format>
							{&#xd;
							"Produto": {}&#xd;
							}&#xd;
						</format>
                        <args/>
                    </payloadFactory>
                </else>
            </filter>
            <log level="custom">
                <property name="--> " value="Requisicao finalizada ----"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
