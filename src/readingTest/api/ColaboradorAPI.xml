<?xml version="1.0" encoding="UTF-8"?>
<api context="/colaborador" name="ColaboradorAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/colaboradorByLideranca">
        <inSequence>
            <property expression="$trp:ApplicationName" name="ApplicationName" scope="default" type="STRING"/>
            <log level="custom" separator="&#x9;&#xa;">
                <property name="--> " value="Requisitando recebida! - /colaboradorByLideranca"/>
                <property expression="$trp:ApplicationName" name="Recebendo requisicao de "/>
            </log>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://localhost:8290/services/ColaboradorDSS/colaboradorByLideranca?matricula={query.param.matricula}">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log level="custom">
                <property expression="json-eval($)" name="colabs"/>
            </log>
            <property expression="json-eval($.Colaboradores.Colaborador[0].matricula)" name="CODIGO_MATRICULA" scope="default" type="STRING"/>
            <filter regex="200" source="$axis2:HTTP_SC">
                <then>
                    <filter regex="false" source="boolean(get-property('CODIGO_MATRICULA'))">
                        <then>
                            <property name="HTTP_SC" scope="axis2" type="STRING" value="404"/>
                            <payloadFactory media-type="json">
                                <format>
									{
									"result": "Nao foi encontrado informacoes para o filtro."
									}
								</format>
                                <args/>
                            </payloadFactory>
                        </then>
                        <else/>
                    </filter>
                </then>
                <else/>
            </filter>
            <filter regex="SESuiteBPM" source="$ctx:ApplicationName">
                <then/>
                <else>
                    <enrich>
                        <source clone="true" xpath="json-eval($.Colaboradores.Colaborador[*].cpf)"/>
                        <target action="remove" type="body"/>
                    </enrich>
                </else>
            </filter>
            <log level="custom" separator="&#x9;&#xa;">
                <property name="- - - " value="Requisitando finalizada!"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
