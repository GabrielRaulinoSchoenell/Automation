<?xml version="1.0" encoding="UTF-8"?>
<api context="/assist" name="AssistAPI" version="v1" version-type="url" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/os/{cpf}">
        <inSequence>
            <property action="remove" name="REST_URL_POSTFIX" scope="default"/>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://localhost:8290/services/AssistDSS/assist/os/{uri.var.cpf}">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
