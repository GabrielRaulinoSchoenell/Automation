<?xml version="1.0" encoding="UTF-8"?>
<api context="/progress" name="ProgressAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/v1/consulta">
        <inSequence>
            <log level="custom">
                <property name="--> " value="Requisitando recebida! - progress/v1/pedido"/>
            </log>
            <propertyGroup>
                <property name="messageType" scope="axis2" type="STRING" value="text/xml"/>
                <property name="Content-Type" scope="axis2" type="STRING" value="text/xml;charset=UTF-8"/>
                <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
            </propertyGroup>
            <payloadFactory media-type="xml">
                <format>
                    <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                        <soapenv:Header/>
                        <soapenv:Body>
                            <pedido>Teste</pedido>
                        </soapenv:Body>
                    </soapenv:Envelope>
                </format>
                <args/>
            </payloadFactory>
            <header name="To" scope="default" value="http://dbprogress.intelbras.com.br:8080/wsahomol"/>
            <log level="full"/>
            <send>
                <endpoint>
                    <default format="soap11">
                        <timeout>
                            <duration>120000</duration>
                        </timeout>
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </default>
                </endpoint>
            </send>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
