<?xml version="1.0" encoding="UTF-8"?>
<api context="/metadata/v1" name="MetadataTotvsAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/segment">
        <inSequence>
            <property action="remove" name="REST_URL_POSTFIX" scope="default"/>
            <sequence key="SendSegmentToSalesforceSequence"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <respond/>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/paymentCondition">
        <inSequence>
            <property action="remove" name="REST_URL_POSTFIX" scope="default"/>
            <sequence key="SendPaymentConditionToSalesforceSequence"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <respond/>
        </faultSequence>
    </resource>
</api>
