<?xml version="1.0" encoding="UTF-8"?>
<api context="/monitoring" name="MonitoringAPI" version="1.0.0" version-type="context" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/limits">
        <inSequence>
            <salesforcerest.listOrganizationLimits configKey="init-salesforce"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="GET" uri-template="/orderWaitingERP">
        <inSequence>
            <salesforcerest.query configKey="init-salesforce">
                <queryString>SELECT Id, Account.Name, OrderNumber, TotalAmount  FROM Order where IntegrationStatus__c = 'WaitingERP'</queryString>
            </salesforcerest.query>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
